{
  "name": "devlog",
  "version": "1.0.0",
  "description": "Monorepo for development logging tools and MCP server",
  "scripts": {
    "build": "pnpm -r build",
    "start": "pnpm --filter @devlog/mcp start",
    "dev": "pnpm --filter @devlog/mcp dev",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm --filter @devlog/mcp test -- --coverage",
    "test:integration": "pnpm --filter @devlog/mcp test:integration",
    "clean": "pnpm -r clean && rm -f *.tsbuildinfo",
    "install-all": "pnpm install",
    "build:mcp": "pnpm --filter @devlog/mcp build",
    "build:core": "pnpm --filter @devlog/core build",
    "build:web": "pnpm --filter @devlog/web build",
    "dev:mcp": "concurrently --names \"CORE,MCP\" --prefix-colors \"green,yellow\" \"pnpm --filter @devlog/core dev\" \"pnpm --filter @devlog/mcp dev\"",
    "dev:web": "concurrently --names \"CORE,WEB\" --prefix-colors \"green,blue\" \"pnpm --filter @devlog/core dev\" \"pnpm --filter @devlog/web dev\"",
    "start:web": "pnpm --filter @devlog/web start",
    "preview:web": "pnpm --filter @devlog/web preview"
  },
  "keywords": [
    "monorepo",
    "mcp",
    "model-context-protocol",
    "devlog",
    "development-notes",
    "ai-assistant"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "9.2.0",
    "prettier": "3.6.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.12.1",
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "dotenv": "16.5.0"
  }
}
