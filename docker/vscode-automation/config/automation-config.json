{
  "automation": {
    "scenarios": [
      {
        "id": "python-algorithms",
        "name": "Python Algorithm Completion",
        "description": "Test Copilot's ability to complete Python algorithms",
        "language": "python",
        "files": ["algorithms.py"],
        "timeout": 300000,
        "expectedSuggestions": 6
      },
      {
        "id": "javascript-api",
        "name": "Express.js API Development",
        "description": "Test Copilot's API development suggestions",
        "language": "javascript",
        "files": ["api.js"],
        "timeout": 300000,
        "expectedSuggestions": 5
      },
      {
        "id": "typescript-utils",
        "name": "TypeScript Utility Functions",
        "description": "Test Copilot's TypeScript completion",
        "language": "typescript",
        "files": ["utils.ts"],
        "timeout": 300000,
        "expectedSuggestions": 8
      }
    ],
    "metrics": {
      "collectInteractions": true,
      "trackResponseTime": true,
      "measureAcceptanceRate": true,
      "captureAlternatives": true
    },
    "reporting": {
      "format": "json",
      "includeDetails": true,
      "exportPath": "/logs/automation-results.json"
    }
  },
  "vscode": {
    "extensions": [
      "GitHub.copilot",
      "GitHub.copilot-chat",
      "ms-vscode.vscode-typescript-next",
      "ms-python.python"
    ],
    "settings": {
      "editor.inlineSuggest.enabled": true,
      "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true
      },
      "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
      }
    }
  },
  "environment": {
    "display": ":99",
    "resolution": "1920x1080x24",
    "codeServerPort": 8080,
    "vncPort": 5900,
    "workspace": "/workspace"
  }
}
