{
	"servers": {
		"playwright": {
			"command": "npx",
			"args": [
				"@playwright/mcp@latest"
			],
			"type": "stdio"
		},
		"devlog": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"@codervisor/devlog-mcp@dev"
			]
		},
		"github": {
			"type": "http",
			"url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer ${input:github-pat}"
      }
		}
	},
	"inputs": [
		{
			"type": "promptString",
			"id": "github-pat",
			"description": "GitHub Personal Access Token",
			"password": true
		}
	]
}