{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node.js TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    // Node.js specific
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],

    // Emit
    "outDir": "./dist",
    "rootDir": "./src",

    // Types
    "types": ["node"],

    // Composite for project references
    "composite": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
