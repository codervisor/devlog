{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "composite": false,
    "incremental": false,
    "paths": {
      "@/*": ["./src/*"],
      "@codervisor/devlog-core": ["../core/build"],
      "@codervisor/devlog-core/*": ["../core/build/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "src/**/*.test.ts", "src/__tests__"]
}
