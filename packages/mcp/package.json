{
  "name": "@codervisor/devlog-mcp",
  "version": "0.0.1",
  "description": "MCP server for managing development logs and working notes",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "type": "module",
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "devlog-mcp": "build/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codervisor/devlog.git",
    "directory": "packages/mcp"
  },
  "homepage": "https://github.com/codervisor/devlog#readme",
  "bugs": {
    "url": "https://github.com/codervisor/devlog/issues"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "dev:nodemon": "nodemon",
    "dev:full": "concurrently --names \"CORE,MCP\" --prefix-colors \"green,yellow\" \"pnpm --filter @codervisor/devlog-core dev\" \"pnpm dev\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "vitest run src/__tests__/integration.test.ts",
    "clean": "rm -rf build *.tsbuildinfo",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "devlog",
    "development-notes",
    "ai-assistant"
  ],
  "author": {
    "name": "Marvin Zhang",
    "email": "tikazyq@163.com"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@codervisor/devlog-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.11.0",
    "better-sqlite3": "^11.10.0",
    "dotenv": "16.5.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@codervisor/devlog-core": "workspace:*",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "2.1.9",
    "@vitest/ui": "^2.1.9",
    "concurrently": "9.2.0",
    "nodemon": "^3.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20"
  }
}
